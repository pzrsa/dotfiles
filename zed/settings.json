{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "enable_experimental_live_diffs": true,
    "version": "2"
  },
  "ui_font_size": 14,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "features": {
    "inline_completion_provider": "copilot"
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Hard",
    "dark": "Gruvbox Dark Hard"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "vim": { "use_system_clipboard": "always", "use_smartcase_find": true },
  "toolbar": { "quick_actions": false, "selections_menu": false },
  "collaboration_panel": { "button": false },
  "file_scan_exclusions": ["**/out"],
  "gutter": { "code_actions": false, "runnables": false },
  "buffer_font_features": { "calt": false },
  "git": {
    "inline_blame": { "enabled": false }
  },
  "vertical_scroll_margin": 10,
  "terminal": {
    "toolbar": { "title": false, "breadcrumbs": false },
    "shell": { "program": "fish" }
  },
  "command_aliases": {
    "w": "wa"
  },
  "buffer_line_height": "standard"
}
