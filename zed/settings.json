{
  "theme": { "light": "Tokyo Night Light", "dark": "Tokyo Night" },
  "buffer_font_size": 13,
  "ui_font_size": 14,
  "agent_ui_font_size": 16,
  "buffer_font_family": "TX-02",
  "ui_font_family": "TX-02",
  "project_panel": {
    "default_width": 300,
    "entry_spacing": "standard",
    "hide_root": true
  },
  "git_panel": {
    "dock": "left",
    "sort_by_path": false,
    "default_width": 300
  },
  "outline_panel": {
    "default_width": 300
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "collaboration_panel": { "button": false },
  "gutter": { "runnables": false },
  "buffer_font_features": { "calt": false },
  "vertical_scroll_margin": 10,
  "terminal": {
    "toolbar": { "breadcrumbs": false },
    "shell": { "program": "fish" },
    "line_height": "standard",
    "font_size": 13.0
  },
  "command_aliases": {
    "w": "wall"
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          },
          "tsserver": { "maxTsServerMemory": 16184 }
        }
      }
    }
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "enable_feedback": false,
    "preferred_completion_mode": "burn",
    "stream_edits": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "inline_code_actions": false,
  "git": { "inline_blame": { "enabled": true, "show_commit_summary": true } },
  "preview_tabs": { "enabled": false },
  "toolbar": { "code_actions": false, "quick_actions": false },
  "tab_bar": {
    "show_nav_history_buttons": true,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": true
  },
  "title_bar": {
    "show_sign_in": false
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "minimap": {
    "show": "never"
  },
  "cursor_shape": "block",
  "edit_predictions": {
    "disabled_globs": []
  }
}
